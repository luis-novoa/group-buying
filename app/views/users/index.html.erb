    <tr>
      <td>Nome</td>
      <td>Email</td>
      <td>Telefone 1</td>
    </tr>
    <% @buyers.each do |buyer| %>
      <tr>
        <td><%= link_to buyer.name, user_path(buyer) %></td>
        <td><%= buyer.email %></td>
        <td><%= "#{buyer.phone1} (#{buyer.phone1_type})" %></td>
      </tr>
    <% end %>
  </table>
</section>
