<%= pending_users(@pending_users) %>
<section class='buyers'>
  <h2>Compradores</h2>
  <table>
    <tr>
      <td>Nome</td>
      <td>Email</td>
      <td>Telefone 1</td>
      <%= adm_actions %>
    </tr>
    <% @buyers.each do |buyer| %>
      <tr id=<%= "buyer-#{buyer.id}" %>>
        <td><%= link_to buyer.name, user_path(buyer) %></td>
        <td><%= buyer.email %></td>
        <td><%= "#{buyer.phone1} (#{buyer.phone1_type})" %></td>
        <%= adm_actions(buyer) %>
      </tr>
    <% end %>
  </table>
</section>
